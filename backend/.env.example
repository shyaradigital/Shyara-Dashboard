# Backend Environment Variables
# Copy this file to .env in the backend folder

# Database
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
# Example for local: postgresql://postgres:password@localhost:5432/shyara_dashboard
DATABASE_URL=postgresql://postgres:password@localhost:5432/shyara_dashboard

# JWT Configuration
# Generate a strong secret with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
# Comma-separated list of allowed origins, or * for all (not recommended in production)
CORS_ORIGIN=http://localhost:3000,https://dashboard.shyara.co.in
